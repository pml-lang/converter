service PML_code

    // TD can be done faster by scanning/replacing once

    function unescape_text ( string ) -> string
        
        return i_string \
            .replace_all (
                to_replace = '''\{'''
                replace_by = "{" ) \
            .replace_all (
                to_replace = '''\}'''
                replace_by = "}" ) \
            .replace_all (
                to_replace = '''\='''
                replace_by = "=" ) \
            .replace_all (
                to_replace = '''\\'''
                replace_by = '''\''' )
    .

    function unescape_attribute_value ( string ) -> string
        
        return unescape_text ( i_string )
    .
.
